(common) {
errors
log
reload
loadbalance
cache
loop
local
prometheus 192.168.1.1:9153
}

(localhostz) {
# dnsmasq is only enabled for setting hostnames in Opnsense
hosts /var/etc/dnsmasq-hosts {
ttl 1
reload 5s
fallthrough
}
}

(k8s_gatewayz) {
forward . 10.1.0.3:53
}

. {
import common
import localhostz
forward . tls://45.90.28.199 tls://45.90.30.199 {
tls_servername router-2457e3.dns.nextdns.io
}
health {
lameduck 5s
}
}

microserver.space {
import common
import localhostz
import k8s_gatewayz
}

russhome.xyz {
import common
import localhostz
import k8s_gatewayz
}
