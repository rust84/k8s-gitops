{
  "packageRules": [
    {
      "matchDatasources": [
        "docker",
        "github-actions",
        "github-releases",
        "github-tags",
        "helm"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "kube-prometheus-stack",
        "lycheeverse/lychee-action",
        "zricethezav/gitleaks",
        "renovatebot/github-action"
      ]
    }
  ]
}
